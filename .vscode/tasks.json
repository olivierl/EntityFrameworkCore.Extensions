{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/EntityFrameworkCore.Extensions.sln"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/tests/EntityFrameworkCore.Extensions.Tests/EntityFrameworkCore.Extensions.Tests.csproj"
            ],
            "type": "process",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}